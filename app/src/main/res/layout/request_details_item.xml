<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/listItemBackground"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="3dp"
    android:padding="10dp">

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/requestBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorSecondary"
                    android:textStyle="bold"
                    android:text="Requested By:"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/requestByName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorSecondary"
                    android:text="Requester Name"
                    android:padding="5dp"/>
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/expandLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/serviceProviderPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:tint="@color/textColorSecondary"
                app:srcCompat="@drawable/people"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/dateOfOredr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="#FFC71C"
                android:text="Date"

                android:padding="5dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/serviceProviderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/textColorSecondary"
            android:text="Service Person"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/serviceProviderJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:text="Job"
            android:padding="5dp"/>


        <TextView
            android:id="@+id/serviceProviderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:text="Contatct Number"
            android:padding="5dp"/>



        <TextView
            android:id="@+id/serviceProviderLtd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:text="Provider Company"
            android:padding="5dp"/>
    </LinearLayout>


</LinearLayout>