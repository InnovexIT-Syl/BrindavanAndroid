<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="10dp">


    <ImageView
        android:id="@+id/requestTypeLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/doctor"
        android:tint="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/serviceReqType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@+id/requestTypeLogo"
        android:padding="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/serviceDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/serviceReqUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Unit"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/downIcon"/>

    <ImageView
        android:id="@+id/downIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/down"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>