<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="@drawable/signup_style"
        android:gravity="center"
        android:padding="30dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:text="Name"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/logo"
            android:layout_marginTop="7dp"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            android:textColorHint="#FFFF" />
        <TextView
            android:id="@+id/nid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text="Nid"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_nid"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="7dp"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            android:textColorHint="#FFFF" />
        <TextView
            android:id="@+id/flatNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_nid"
            android:text="Flat no"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_flat"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_nid"
            android:layout_marginTop="7dp"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            android:textColorHint="#FFFF" />

        <TextView
            android:id="@+id/block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_flat"
            android:text="Block"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_block"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_flat"
            android:layout_marginTop="7dp"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            android:textColorHint="#FFFF" />
        <TextView
            android:id="@+id/OwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_block"
            android:text="Owner's Name"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_Owner_Name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_block"
            android:layout_marginTop="7dp"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            android:textColorHint="#FFFF" />
        <TextView
            android:id="@+id/family_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_Owner_Name"
            android:text="No of Family members"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_family_members"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_Owner_Name"
            android:layout_marginTop="7dp"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            android:textColorHint="#FFFF" />
        <Button
            android:id="@+id/signUp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_family_members"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_style"
            android:onClick="goMainPage"
            android:padding="10dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="23sp" />
    </RelativeLayout>
</RelativeLayout>